package cssSup;

import java.util.List;

import javafx.scene.Node;

public class CssManipulation {
	public void addClassInNode(Node node, String classCss) {
		node.getStyleClass().add(classCss);
	}
	public void addClassInArrayOfNodes(List<Node> listNode,String classCss) {
		for(Node node:listNode) {
			node.getStyleClass().add(classCss);
		}
	}
	public void removeClassInNode(Node node, String classCss) {
		node.getStyleClass().remove(classCss);
	}
}
